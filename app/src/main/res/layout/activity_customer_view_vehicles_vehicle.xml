<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".customer.ViewVehiclesActivityVehicle">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="850dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/vehiclecard"
        android:layout_width="350dp"
        android:layout_height="850dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/card" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vehiclecard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        android:text="Vehicle Details"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignTop="@id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        tools:srcCompat="@drawable/ic_baseline_image_24" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vehiclecard"
        android:layout_alignTop="@id/imageView"
        android:layout_marginStart="40dp"
        android:layout_marginTop="220dp"

        android:text="Vehicle no." />

    <TextView
        android:id="@+id/textView_VehicleNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView14"
        android:layout_alignTop="@id/textView14"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"

        android:text="Loading..." />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView14"
        android:layout_alignTop="@id/textView14"
        android:layout_marginTop="70dp"

        android:text="Model" />

    <TextView
        android:id="@+id/textView_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView17"
        android:layout_alignTop="@id/textView17"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"

        android:text="Loading..." />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView17"
        android:layout_alignTop="@id/textView17"
        android:layout_marginTop="70dp"

        android:text="Category" />

    <TextView
        android:id="@+id/textView_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView7"
        android:layout_alignTop="@id/textView7"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"

        android:text="Loading..." />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView7"
        android:layout_alignTop="@id/textView7"
        android:layout_marginTop="70dp"

        android:text="Description" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView25"
        android:layout_alignTop="@id/textView25"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"

        android:text="Loading..." />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView25"
        android:layout_alignTop="@id/textView25"
        android:layout_marginTop="70dp"

        android:text="Price" />

    <TextView
        android:id="@+id/rm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView23"
        android:layout_alignTop="@id/textView23"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"

        android:text="RM : " />

    <TextView
        android:id="@+id/textView_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView23"
        android:layout_alignTop="@id/textView23"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"

        android:text="Loading..." />

    <TextView
        android:id="@+id/textView223"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView23"
        android:layout_alignTop="@id/textView23"
        android:layout_marginTop="70dp"

        android:text="Availablility" />

    <TextView
        android:id="@+id/textView_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView223"
        android:layout_alignTop="@id/textView223"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"

        android:text="Loading..." />

    <ImageView
        android:id="@+id/booknow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_alignTop="@id/textView_availability"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/booknow" />

</RelativeLayout>
</ScrollView>